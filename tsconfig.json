{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es6",
    "jsx": "react",
    "lib": [
      "es2015",
      "es2020",
      "dom"
    ],
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // "downlevelIteration": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "ClientApp/*": ["./src/*"] // import Something from 'ClientApp/foo';
    }
  },
  "baseUrl": "./",
  "exclude": ["node_modules/", "./dist"],
  "include": ["src"],
  "typeAcquisition": {
    "enable": false
  }
}